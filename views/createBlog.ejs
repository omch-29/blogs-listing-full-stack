<% layout('boilerplate') %>
<h3 class="text-center mb-4"><i class="fa-solid fa-pen"></i> Create Blog</h3>

<form action="/blogs/new" method="POST" class="mx-auto" style="max-width:600px;">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" name="title" id="title" class="form-control" required />
  </div>
  <div class="mb-3">
    <label for="content" class="form-label">Content</label>
    <textarea name="content" id="content" rows="6" class="form-control" required></textarea>
  </div>

  <button type="submit" class="btn btn-success w-100">
    <i class="fa-solid fa-upload"></i> Publish
  </button>
</form>
